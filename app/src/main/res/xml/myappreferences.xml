<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="NotifSettings" android:title="Notification Settings">
    <PreferenceCategory android:title="Category 1">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="checkboxPref"
            android:summary="True or False"
            android:title="Checkbox" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Datos personales" >
        <EditTextPreference
            android:defaultValue="Mete el valor"
            android:key="editTextPref"
            android:summary="Mete tu nombre"
            android:textColor="@color/DarkBlue"
            android:title="Mete tu nombre" />
        <RingtonePreference
            android:key="ringtonePref"
            android:summary="Select a ringtone"
            android:title="Ringtones" />
        <PreferenceScreen
            android:key="secondPrefScreenPref"
            android:summary="Click here to go to the second Preference Screen"
            android:title="Datos de direccion" >
            <EditTextPreference
                android:key="secondEditTextPref"
                android:summary="Mete tu calle"
                android:title="Tu telefono (segunda pantalla)" />
            <Preference android:title="Este actua como boton"
                android:key="button"
                android:summary="Este actuara como boton"/>
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>
