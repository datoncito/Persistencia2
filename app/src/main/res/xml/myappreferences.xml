<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:key="NotifSettings" android:title="Notification Settings">
    <PreferenceCategory android:title="Category 1">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="checkboxPref"
            android:summary="True or False"
            android:title="Checkbox" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Category 2" >
        <EditTextPreference
            android:defaultValue="Mete el valor"
            android:key="editTextPref"
            android:summary="Enter a string"
            android:textColor="@color/DarkBlue"
            android:title="Mete tu nombre" />
        <RingtonePreference
            android:key="ringtonePref"
            android:summary="Select a ringtone"
            android:title="Ringtones" />
        <PreferenceScreen
            android:key="secondPrefScreenPref"
            android:summary="Click here to go to the second Preference Screen"
            android:title="Second Preference Screen" >
            <EditTextPreference
                android:key="secondEditTextPref"
                android:summary="Enter a string"
                android:title="Edit Text (second Screen)" />
            <Preference android:title="Acts like a button"
                android:key="button"
                android:summary="This will act like a button"/>
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>
